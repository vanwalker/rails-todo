<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  See Everyone Todos
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Everyone todos</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <%  @todos.each do |item|   %>
        <p> <%= item.title %>
          <%# <span> <%= link_to "Delete", todo_path(item), method: :delete %> </span>
          <%# <span> <%= link_to "Update", edit_todo_path(item) %> </span>
          <%# <span> <%= link_to "New", new_todo_path %> </span>
           <span> <%= link_to "view", todo_path(item) %> </span>
        </p>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
